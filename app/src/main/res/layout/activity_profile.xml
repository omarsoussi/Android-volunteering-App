<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gradient Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gradient"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:gravity="center">

                <!-- Toolbar -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="start"
                    app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
                    app:titleTextColor="@color/white" />

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="@string/profile_picture"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:elevation="4dp" />

                <!-- Change Picture Button -->
                <Button
                    android:id="@+id/btnChangeProfilePicture"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Change Picture"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <!-- Name -->
                <TextView
                    android:id="@+id/tvProfileName"
                    style="@style/TextHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    tools:text="John Doe" />

                <!-- Profile Type Badge -->
                <TextView
                    android:id="@+id/tvProfileType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Volunteer Profile"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/badge_low"
                    android:elevation="2dp"
                    tools:text="Volunteer Profile" />

            </LinearLayout>

            <!-- Contact Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Information"
                        android:layout_marginBottom="16dp" />

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="@color/primary"
                            android:contentDescription="Email" />

                        <TextView
                            android:id="@+id/tvProfileEmail"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            tools:text="john.doe@email.com" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/stat_sys_phone_call"
                            android:tint="@color/primary"
                            android:contentDescription="Phone" />

                        <TextView
                            android:id="@+id/tvProfilePhone"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            tools:text="+216 12345678" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Volunteer Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvVolunteerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/llVolunteerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volunteer Details"
                        android:layout_marginBottom="16dp" />

                    <!-- Surname -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surname"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvVolunteerSurname"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Smith" />

                    <!-- Interests -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interests"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVolunteerInterests"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Events, Education, Health" />

                    <!-- Skills -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVolunteerSkills"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Teaching, First Aid, Communication" />

                    <!-- Availability -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVolunteerAvailability"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Weekends, Evenings" />

                    <!-- Rating -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:id="@+id/rbVolunteerRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5" />

                        <TextView
                            android:id="@+id/tvVolunteerRatingCount"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            tools:text="4.5 (50 ratings)" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Organization Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvOrganizationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/llOrganizationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization Details"
                        android:layout_marginBottom="16dp" />

                    <!-- Rating -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <RatingBar
                            android:id="@+id/rbOrganizationRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5" />

                        <TextView
                            android:id="@+id/tvOrganizationRatingCount"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            tools:text="4.5 (120 ratings)" />

                        <TextView
                            android:id="@+id/tvOrgRatingCount"
                            style="@style/TextBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="120" />
                    </LinearLayout>

                    <!-- Website -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrgWebsite"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="www.example.org" />

                    <!-- Member Count -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Members"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrgMemberCount"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="150 members" />

                    <!-- Founded Year -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Founded"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrgFoundedYear"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="2010" />

                    <!-- Tags -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tags"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrgTags"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Health, Emergency, Community" />

                    <!-- Approval Status -->
                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approval Status"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvApprovalStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/badge_low"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Approved" />

                    <TextView
                        android:id="@+id/tvOrgApprovalStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:text="Approved" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="80dp">

                <Button
                    android:id="@+id/btnEditProfile"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnLogout"
                    style="@style/ButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/purple"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/text_secondary"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
