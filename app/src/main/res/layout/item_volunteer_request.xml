<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Priority -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextTitle"
                tools:text="Need Medical Supplies" />

            <TextView
                android:id="@+id/tvPriorityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/badge_priority_high"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="@string/high"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="HIGH" />

        </LinearLayout>

        <!-- Volunteer Name -->
        <TextView
            android:id="@+id/tvVolunteerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextCaption"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"
            tools:text="From: John Doe" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvRequestDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextBody"
            android:textColor="@color/text_secondary"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="We urgently need medical supplies for our community center. Looking for first aid kits, bandages, and basic medicines." />

        <!-- Location and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Location -->
            <TextView
                android:id="@+id/tvRequestLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@android:drawable/ic_dialog_map"
                android:drawablePadding="4dp"
                android:drawableTint="@color/text_tertiary"
                style="@style/TextCaption"
                android:textColor="@color/text_tertiary"
                tools:text="Tunis, Tunisia" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvRequestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextCaption"
                android:textColor="@color/text_tertiary"
                tools:text="Nov 12, 2025" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
