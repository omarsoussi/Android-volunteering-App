<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Post Image with Priority Badge Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/surface_variant"
                android:contentDescription="@string/post_image"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <!-- Priority Badge -->
            <TextView
                android:id="@+id/tvPriorityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/badge_priority_high"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/high"
                android:textColor="@android:color/white"
                style="@style/BadgeStyle" />

        </FrameLayout>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/TextHeadline"
                    tools:text="Blood Donation Camp" />

                <!-- Organization Info Card (Clickable) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOrganizationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_variant">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:id="@+id/ivOrganizationPic"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_organization_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background" />
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">
                            
                            <TextView
                                android:id="@+id/tvOrganizationName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextSubtitle"
                                tools:text="Red Cross Tunisia" />
                            
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/rbOrganizationRating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:stepSize="0.1"
                                    android:rating="4.5" />

                                <TextView
                                    android:id="@+id/tvRatingScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    style="@style/TextCaption"
                                    android:textColor="@color/text_secondary"
                                    tools:text="4.5" />
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="â€¢"
                                    android:textColor="@color/text_tertiary" />
                                
                                <TextView
                                    android:id="@+id/tvFollowersCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextCaption"
                                    android:textColor="@color/text_secondary"
                                    tools:text="234 followers" />
                            </LinearLayout>
                        </LinearLayout>
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_more"
                            android:tint="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Badge -->
                <TextView
                    android:id="@+id/tvCategoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/badge_health"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="8dp"
                    android:text="@string/health"
                    android:textColor="@android:color/white"
                    style="@style/BadgeStyle" />

                <!-- Category Badge -->
                <TextView
                    android:id="@+id/tvCategoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/badge_health"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="8dp"
                    android:text="@string/health"
                    android:textColor="@android:color/white"
                    style="@style/BadgeStyle" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    style="@style/TextSubtitle"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="4dp"
                    style="@style/TextBody"
                    android:textColor="@color/text_secondary"
                    tools:text="Join us for a blood donation camp to save lives. We need volunteers and donors." />

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/location"
                        android:src="@android:drawable/ic_dialog_map"
                        android:tint="@color/purple" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        style="@style/TextBody"
                        tools:text="Tunis, Tunisia" />
                </LinearLayout>

                <!-- Date/Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/date_time"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@color/purple" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        style="@style/TextBody"
                        tools:text="2025-01-15 10:00" />
                </LinearLayout>

                <!-- Volunteers Needed -->
                <TextView
                    android:id="@+id/tvVolunteersNeeded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/TextBody"
                    tools:text="Volunteers needed: 20" />

                <!-- Needs Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needs"
                    style="@style/TextSubtitle"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/llNeedsCheckboxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnDonate"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/donate"
                        style="@style/ButtonPrimary" />

                    <Button
                        android:id="@+id/btnHelpSMS"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/help_via_sms"
                        style="@style/ButtonSecondary" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
