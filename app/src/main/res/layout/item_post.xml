<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Post Image with Gradient Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivPostImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/surface_variant"
                android:contentDescription="@string/post_image"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <!-- Priority Badge on Image -->
            <TextView
                android:id="@+id/tvPriorityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/badge_high"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/high"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:elevation="2dp" />
        </FrameLayout>

        <!-- Post Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tvCategoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_health"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/health"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvPostTitle"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Blood Donation Camp" />

            <!-- Organization Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvOrganizationName"
                    style="@style/TextSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    tools:text="Red Cross Tunisia" />

                <RatingBar
                    android:id="@+id/rbOrganizationRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvRatingCount"
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    tools:text="(42)" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvPostDescription"
                style="@style/TextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                tools:text="Join us for a blood donation camp to save lives..." />

            <!-- Location and Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/location"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvPostLocation"
                    style="@style/TextCaption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_secondary"
                    tools:text="Tunis, Tunisia" />

                <TextView
                    android:id="@+id/tvPostDate"
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="2 days ago" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
